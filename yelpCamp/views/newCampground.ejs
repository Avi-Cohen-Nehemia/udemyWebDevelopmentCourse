<%- include("partials/header") %>

<div class="container">
    <h1 class="text-center mb-3">Create a new campground</h1>

    <form action="/campgrounds" method="POST" class="form-group">
        <div class="row">
            <div class="form-group col-md-6 ml-auto mr-auto">
                <label for="name">Campground Name</label>
                <input type="text" placeholder="name" name="name" class="form-control">
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6 ml-auto mr-auto">
                <label for="image">Image URL</label>
                <input type="text" placeholder="image url" name="image" class="form-control">
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6 ml-auto mr-auto">
                <button type="submit" class="btn btn-lg btn-success btn-block">Submit</button>
            </div>
        </div>
    </form>
    <div class="row">
        <div class="col-md-6 ml-auto mr-auto">
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<%- include("partials/footer") %>