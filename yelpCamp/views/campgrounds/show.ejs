<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card img-thumbnail mb-3 p-0">
                <img src="<%= campground.image %>" class="card-img-top"/>
                <div class="caption-full p-4"> 
                    <h4 class="float-right">$9.00/night</h4>
                    <h4><a href="#"><%= campground.name %></a></h4>
                    <p><%= campground.description %></p>
                </div>
            </div>
            <div class="card card-header mb-4">
                <div class="text-right">
                    <p class="my-auto"><a href="/campgrounds/<%= campground._id %>/comments/new" class="btn btn-success">Add New Comment</a></p>
                </div>
                <hr>
                <% campground.comments.map(comment => { %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="float-right">10 days ago</span>
                            <p><%= comment.text %></p>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>

<%- include("../partials/footer") %>