<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Yelp Camp</p>
            <div class="list-group mb-4">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
            <div id="map"></div>
        </div>
        <div class="col-md-9">
            <div class="card img-thumbnail mb-3 p-0">
                <img src="<%= campground.image %>" class="card-img-top"/>
                <div class="caption-full p-4"> 
                    <h4 class="float-right">$<%= campground.price %>/night</h4>
                    <h4><a href="#"><%= campground.name %></a></h4>
                    <p><%= campground.description %></p>
                    <p><em>Submitted by <%= campground.author.username %>, <%= moment(campground.createdAt).fromNow() %></em></p>
                    <!-- show these buttons only if the user is logged in and owns the campground -->
                    <% if (currentUser && (campground.author.id.equals(currentUser._id))) { %>
                        <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-sm btn-warning font-weight-bold text-white">Edit</a>
                        <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST" class="d-inline">
                            <button class="btn btn-sm btn-danger font-weight-bold">Delete</button>
                        </form>
                    <% } %>
                </div>
            </div>
            <div class="card card-header mb-4">
                <div class="text-right">
                    <p class="my-auto"><a href="/campgrounds/<%= campground._id %>/reviews/new" class="btn btn-success">Add New Review</a></p>
                </div>
                <% campground.reviews.map(review => { %>
                    <hr>
                    <div class="row">
                        <div class="col-md-12 mt-3">
                            <p>
                                Review by: 
                                <strong><%= review.author.username %></strong>
                                <span class="float-right"><%= moment(review.createdAt).fromNow() %></span>
                            </p>
                            <p><%= review.text %></p>
                            <!-- show these buttons only if the user is logged in and owns the campground -->
                            <% if (currentUser && (review.author.id.equals(currentUser._id))) { %>
                            <a href="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                            <form action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST" class="d-inline">
                                <button class="btn btn-sm btn-danger font-weight-bold">Delete</button>
                            </form>
                            <% } %>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>

    <script>
        function initMap() {
          let lat = +`<%= campground.lat %>`;
          let lng = +`<%= campground.lng %>`;
          let center = {lat: lat, lng: lng };
          let map = new google.maps.Map(document.getElementById('map'), {
              zoom: 8,
              center: center,
              scrollwheel: false
          });
          let contentString = `
            <strong><%= campground.name %><br />
            <%= campground.location %></strong>
            <p><%= campground.description %></p>
          `
          let infowindow = new google.maps.InfoWindow({
            content: contentString
          });
          let marker = new google.maps.Marker({
              position: center,
              map: map
          });
          marker.addListener('click', function() {
            infowindow.open(map, marker);
          });
        }
    </script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=<%= process.env.MAPS_API_KEY %>&callback=initMap"></script>

<%- include("../partials/footer") %>