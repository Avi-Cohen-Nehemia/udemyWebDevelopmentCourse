<%- include("./partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header">New Blog</div>
    <form action="/blogs" method="POST" class="ui form">
        <div class="field">
            <label for="title">Title</label>
            <input required type="text" name="blog[title]" placeholder="title" id="title">
        </div>
        <div class="field">
            <label for="image">Image URL</label>
            <input required type="text" name="blog[image]" placeholder="image" id="image">
        </div>
        <div class="field">
            <label for="body">Blog Content</label>
            <textarea required name="blog[body]" placeholder="content goes here..." id="body"></textarea>
        </div>
        <input type="submit" class="ui violet basic button">
    </form>
</div>

<%- include("./partials/footer") %>